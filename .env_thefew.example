# TheFew CB Scraper Configuration

# Target URLs
THEFEW_LOGIN_URL=https://thefew.tw/login
THEFEW_CB_URL=https://thefew.tw/cb

# Download directory for CSV files
DOWNLOAD_DIR=downloads/thefew

# Browser settings
# true - 無頭模式（背景執行）
# false - 顯示瀏覽器視窗
HEADLESS=false

# Cookie file for session persistence
# 儲存登入狀態，避免每次都要重新登入
COOKIE_FILE=.thefew_cookies.json

# Login timeout (seconds)
LOGIN_TIMEOUT=60

# Page load timeout (seconds)
PAGE_TIMEOUT=30

# Retry settings
MAX_RETRIES=3

# 是否抓取詳細資料（點擊展開每一列）
# true - 抓取詳細資料（較慢，但資料完整）
# false - 只抓取主表格資料（較快）
FETCH_DETAIL=false

